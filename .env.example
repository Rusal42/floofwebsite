# Discord Application Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_bot_client_id_here
DISCORD_CLIENT_SECRET=your_discord_bot_client_secret_here

# JWT Secret for user authentication
# Generate a secure random string for production
JWT_SECRET=your_secure_jwt_secret_here

# Bot API Token for stats updates
# This should be a secure token that your bot uses to update stats
BOT_API_TOKEN=your_secure_bot_api_token_here

# Server Configuration
PORT=3000

# Optional: Database Configuration (for future use)
# DATABASE_URL=your_database_connection_string_here
